# .env
# This file should be in the root directory of the project.

# Backend Configuration
# Use a PostgreSQL connection string. For local development with Docker, this might look like:
# DATABASE_URL="postgresql://user:password@localhost:5432/mydatabase"
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/fullstack"

# This is a secret key for signing JWTs.
# You can generate a good one with: openssl rand -hex 32
API_SECRET_KEY="your-super-secret-key-change-me"

# Frontend Configuration
# This tells the backend where the frontend is running, for CORS and other purposes.
NEXT_PUBLIC_API_BASE_URL="http://localhost:8002"

# These are placeholders. Replace with actual values if you use them.
BETTER_AUTH_SECRET="your-better-auth-secret"
BETTER_AUTH_URL="http://localhost:8002/api/auth"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
